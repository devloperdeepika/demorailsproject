<div class="container">
  <h1>User Stocks</h1>
  <table class="table table-responsive">
    <thead>
      <th>Stock_Name</th>
      <th>Stock_Price</th>

      <th>Action</th>
      <th colspan='3'></th>
    </thead>   
    <tbody>  
     <% @stock.buy_stocks.each do |stock_item| %>
        <tr>
          <td><%= stock_item.stock.name %></td>
          <td><%= stock_item.price %></td>
          <td><%= link_to "Remove",remove_stock_path(stock_item), 
          data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %></td>
        </tr> 
     <% end %>
    </tbody>
 </table>
</div> 
<%= link_to 'Back', root_path, class: "btn btn-basic" %>
