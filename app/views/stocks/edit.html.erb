<h1>Edit Stock</h1>

<%= form_with model: @stock, local: true do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price %><br>
    <%= form.text_area :price %>
  </div>

   <div>
    <%= form.label :image %><br>
    <%= form.file_field :image %>
  
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back',stocks_path, class: "btn btn-basic" %>




